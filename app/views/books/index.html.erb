<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <% if @book.errors.count==1 %>
      <h3><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <% else %>
      <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <% end %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'share/userinfo', user: current_user %> <!-- これはcurrentでOK -->
      <%= render 'share/newbook' %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Option</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image(50, 50) %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td>
                <p><%= book.body %></p>
              </td>
              <td>
                <% if book.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(book), method: :delete do %>
                    <svg class="fas fa-sharp fa-heart fa-xs" style="color:red"></svg><%= book.favorites.count %>
                  <% end %>
                <% else %>
                  <%= link_to book_favorites_path(book), method: :post do %>
                    <svg class="fas fa-sharp fa-heart fa-xs" style="color:blue"></svg><%= book.favorites.count %>
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= "#{book.book_comments.count} コメント" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
